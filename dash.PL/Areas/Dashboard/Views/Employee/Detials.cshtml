@model EmployeeFromVM

@section header {
    <h2>Employee Details .</h2>
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header text-center">
            <h3>@Model.Name</h3>
        </div>

        <div class="card-body row">
            <div class="col-md-4 text-center">
                <img src="~/files/images/@Model.Img" class="img-fluid rounded-circle w-75 h-100" alt="Employee Image" />
            </div>
            <div class="col-md-8">
                <div class="row">
                    

                    <div class="col-md-6 mb-3">
                        <strong>Mobile:</strong>
                        <p>@Model.Mobile</p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Description:</strong>
                        <p>@Model.Description</p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>LinkedIn:</strong>
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Linkedin))
                            {
                                <a href="@Model.Linkedin" target="_blank">LinkedIn Profile</a>
                            }
                            else
                            {
                                <span>Not provided</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Facebook:</strong>
                        <p>
                            @if (!string.IsNullOrEmpty(Model.Facebook))
                            {
                                <a href="@Model.Facebook" target="_blank">Facebook Profile</a>
                            }
                            else
                            {
                                <span>Not provided</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>Start Contract:</strong>
                        <p>@Model.StartContract.ToString("yyyy-MM-dd")</p>
                    </div>

                    <div class="col-md-6 mb-3">
                        <strong>End Contract:</strong>
                        <p>
                            @if (Model.EndContract.HasValue)
                            {
                                @Model.EndContract.Value.ToString("yyyy-MM-dd")
                            }
                            else
                            {
                                <span>Still Active</span>
                            }

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
